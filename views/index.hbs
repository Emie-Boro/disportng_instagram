<div class="container">
    <form id="storyForm">
        <div class="story-bio">
            <p class="story-txt">Writer Details</p>
            <div class="flex">
                <div class="form-group">
                    <label for="">Name</label><br>
                    <input type="text" class="form-control" name="name" id="storyName">
                </div>
                <div class="form-group">
                    <label for="">State</label><br>
                    <input type="text" class="form-control" name="state" id="storyState">
                </div>
            </div>
            <div class="flex">
                <div class="form-group">
                <label for="">Phone</label><br>
                <input type="text" class="form-control" name="phone" id="storyPhone">
            </div>
            <div class="form-group">
                <label for="">Email</label><br>
                <input type="text" class="form-control" name="email" id="storyEmail">
            </div>
            </div>
        </div>

        <div class="story-content">
            <p class="story-txt">Story</p>
            <div class="form-group">
                <label for="">Title</label><br>
                <input type="text" class="form-control" name="title" id="storyTitle">
            </div>
            <div class="form-group">
                <label for="">Body</label><br>
                <textarea name="content" class="bdr" id="storyContent" cols="50" rows="10"></textarea>
            </div>
        </div>
        
        <button type="button" class="btn" onclick="submitForm()">Submit</button>
    </form>
</div>